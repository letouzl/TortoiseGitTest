<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler_view_test_item_person"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#aabbdd"
    tools:context="com.mediacube.recyclerview.RecyclerViewActivity">

    <TextView
        android:id="@+id/recycler_view_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="你好啊，世界"
        android:textSize="20sp"
        android:background="#eebbaa"
          />
    <TextView
        android:id="@+id/recycler_view_age_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="122333"
        android:textSize="15sp"
        android:paddingLeft="50dp"
        android:background="#aaccbb"
        />
</LinearLayout>
